<%- include('partials/header') %>

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
  <div class="col-lg-6">
    <div class="card p-4">
      <h3 class="text-center mb-4">Change Fitness Goal</h3>
      <form action="/update-goal" method="POST">
        <div class="mb-3">
          <label for="goal" class="form-label">Select New Goal</label>
          <select class="form-select" name="goal" id="goal" required>
            <option value="maintain">Maintain Weight</option>
            <option value="cut">Lose Weight (Cut)</option>
            <option value="bulk">Gain Muscle (Bulk)</option>
          </select>
        </div>
        <button type="submit" class="btn w-100">Save New Goal</button>
      </form>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
