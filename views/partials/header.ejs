<section id="title" class="gradient-background">
  <header class="p-3 text-bg-dark">
    <div class="container">
      <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
        <!-- Logo -->
        <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
          <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap">
            <use xlink:href="#bootstrap"></use>
          </svg>
        </a>

        <!-- Nav Links -->
        <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
          <li><a href="/" class="nav-link px-3 text-secondary">Home</a></li>
          <li><a href="/dashboard" class="nav-link px-3 text-white">Nutrition Dashboard</a></li>
          <li><a href="/logmeal" class="nav-link px-3 text-white">Log Meal</a></li>
          <li><a href="/faq" class="nav-link px-3 text-white">FAQs</a></li>
          <li><a href="/about" class="nav-link px-3 text-white">About</a></li>
        </ul>

        <!-- Search & Buttons -->
        <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3" role="search">
          <input type="search" class="form-control form-control-dark text-bg-dark" placeholder="Search..." aria-label="Search" />
        </form>
        <div class="text-end">
  <% if (!session.user) { %>
    <a href="/login" class="btn btn-outline-light me-2">Login</a>
    <a href="/register" class="btn btn-warning">Sign-up</a>
  <% } else { %>
    <a href="/dashboard" class="btn btn-success me-2">Dashboard</a>
    <a href="/logmeal" class="btn btn-outline-light me-2">Log Meal</a>
    <a href="/logout" class="btn btn-danger">Logout</a>
  <% } %>
</div>


      </div>
    </div>
  </header>
</section>
