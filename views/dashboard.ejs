<%- include('partials/header') %>
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<div class="container py-5">

  <h1 class="text-center mb-5 fw-bold text-primary">Today's Nutritional Breakdown</h1>

 <div class="row g-4">
  <% ['breakfast', 'lunch', 'dinner'].forEach(meal => { %>
    <div class="col-md-4">
      <div class="card shadow-sm h-100">
        <div class="card-header bg-dark text-white text-center rounded-top">
          <h5 class="mb-0 text-capitalize"><%= meal %></h5>
        </div>
        <div class="card-body">
          <div class="row fs-6">
            <div class="col-6 text-start">Calories</div>
            <div class="col-6 text-end fw-semibold">
              <%= meals[meal].calories %> / <%= targets[meal].calories %> kcal
            </div>

            <div class="col-6 text-start">Protein</div>
            <div class="col-6 text-end fw-semibold">
              <%= meals[meal].protein %> / <%= targets[meal].protein %> g
            </div>

            <div class="col-6 text-start">Carbs</div>
            <div class="col-6 text-end fw-semibold">
              <%= meals[meal].carbs %> / <%= targets[meal].carbs %> g
            </div>

            <div class="col-6 text-start">Fat</div>
            <div class="col-6 text-end fw-semibold">
              <%= meals[meal].fat.toFixed(1) %> / <%= targets[meal].fat %> g
            </div>
          </div>
        </div>
      </div>
    </div>
  <% }) %>
</div>

  <!-- Buttons -->
  <div class="text-center mt-4">
    <a href="/update_physical" class="btn btn-warning me-3">
      <i class="bi bi-body-text"></i> Update Physical Info
    </a>
    <a href="/change_goal" class="btn btn-success">
      <i class="bi bi-flag"></i> Change Goal
    </a>
  </div>

  <!-- Future Chart/Table Switch -->
  <div class="text-center mt-4">
    <a href="/weeklysummary" class="btn btn-outline-info">
      <i class="bi bi-bar-chart-line"></i> View Weekly Summary
    </a>
  </div>

</div>

<%- include('partials/footer') %>
