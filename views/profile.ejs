<%- include('partials/header') %>

<div class="container py-5">
  <h1 class="text-center mb-5">User Profile</h1>

  <div class="row g-4">
    <!-- User Details -->
    <div class="col-lg-6">
      <div class="card p-4 h-100">
        <h5 class="mb-3">Personal Information</h5>
        <p><strong>Name:</strong> <%= user.first_name %> <%= user.last_name %></p>
        <p><strong>Email:</strong> <%= user.email %></p>
        <p><strong>Age:</strong> <%= user.age %></p>
        <p><strong>Gender:</strong> <%= user.gender %></p>
        <p><strong>Height:</strong> <%= user.height %> cm</p>
        <p><strong>Weight:</strong> <%= user.weight %> kg</p>
        <p><strong>Goal:</strong> <%= user.goal %></p>
        <p><strong>Enrolled Mess:</strong> <%= enrolledMess %></p>
      </div>
    </div>

    <!-- Meal History -->
    <div class="col-lg-6">
      <div class="card p-4 h-100">
        <h5 class="mb-3">Recent Meals</h5>
        <% if (mealHistory.length > 0) { %>
          <ul class="list-group list-group-flush">
            <% mealHistory.forEach(meal => { %>
              <li class="list-group-item d-flex justify-content-between align-items-center">
                <span><%= meal.food_item %></span>
                <span class="badge bg-primary rounded-pill"><%= meal.calories %> kcal</span>
              </li>
            <% }) %>
          </ul>
        <% } else { %>
          <p class="text-muted">No meal history found.</p>
        <% } %>
      </div>
    </div>
  </div>

  <div class="text-center mt-4">
    <a href="/update_physical" class="btn">Update Physical Info</a>
  </div>
</div>

<%- include('partials/footer') %> 