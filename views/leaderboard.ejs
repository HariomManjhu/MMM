<%- include('partials/header') %>

<div class="container py-5">
  <h1 class="text-center mb-5">Leaderboard</h1>

  <div class="row">
    <!-- Top 10 Users -->
    <div class="col-md-8">
      <div class="card p-4">
        <h5 class="mb-3">Top 10 Users</h5>
        <ul class="list-group list-group-flush">
          <% topUsers.forEach((user, index) => { %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <span><%= index + 1 %>. <%= user.first_name %> <%= user.last_name %></span>
              <span class="badge bg-primary rounded-pill"><%= user.score %></span>
            </li>
          <% }) %>
        </ul>
      </div>
    </div>

    <!-- Your Rank -->
    <div class="col-md-4">
      <div class="card p-4 text-center">
        <h5 class="mb-3">Your Rank</h5>
        <p class="display-4"><%= currentUser.user_rank %></p>
        <p class="text-muted">with a score of <%= currentUser.score %></p>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %> 