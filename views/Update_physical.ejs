<%- include('partials/header') %>

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
  <div class="col-lg-6">
    <div class="card p-4">
      <h3 class="text-center mb-4">Update Physical Information</h3>
      <form action="/update-physical" method="POST">
        <div class="mb-3">
          <label for="height" class="form-label">Height (cm)</label>
          <input type="number" class="form-control" name="height" min="1" required>
        </div>
        <div class="mb-3">
          <label for="weight" class="form-label">Current Weight (kg)</label>
          <input type="number" class="form-control" name="weight" min="1" required>
        </div>
        <div class="mb-3">
          <label for="age" class="form-label">Age</label>
          <input type="number" class="form-control" name="age" min="1" required>
        </div>
        <button type="submit" class="btn w-100">Update Info</button>
      </form>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
