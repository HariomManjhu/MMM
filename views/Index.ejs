<!-- Updated index.ejs (dynamic BMI + calorie intake arcs + login prompt if not logged in) -->
<%- include("partials/header") %>

<div class="container my-5">
  <div class="main-hero p-5">
    <div class="row align-items-center">
      <div class="col-lg-7 text-center text-lg-start">
        <h1 class="display-4 fw-bold">Fuel Your Body, Track Your Progress</h1>
        <p class="lead my-4">
          Welcome to your personal health dashboard. Monitor calories, macros, BMI, and stay consistent with your fitness journey.
        </p>
        <% if (session.user) { %>
          <a href="/dashboard" class="btn btn-lg">Open Dashboard</a>
        <% } else { %>
          <a href="/login" class="btn btn-lg">Login to Get Started</a>
        <% } %>
      </div>
      <div class="col-lg-5 mt-4 mt-lg-0">
        <img src="/eating-salad.jpeg" class="img-fluid rounded-4 shadow-lg" alt="Healthy Eating">
      </div>
    </div>
  </div>
</div>

<% if (session.user) { %>
<section class="container my-5">
  <h2 class="text-center mb-4">Your Health Stats</h2>
  <div class="row justify-content-center g-4">
    <!-- BMI Card -->
    <div class="col-md-5">
      <div class="card text-center p-4">
        <h3>BMI: <span class="highlight"><%= bmi %></span></h3>
        <p class="text-muted mb-0"><%= bmiStatus %></p>
      </div>
    </div>
    <!-- Calorie Card -->
    <div class="col-md-5">
      <div class="card text-center p-4">
        <h3><span class="highlight"><%= todayCalories %></span> / <%= calorieGoal %> kcal</h3>
        <p class="text-muted mb-0">Today's Intake</p>
      </div>
    </div>
  </div>
</section>
<% } else { %>
<section class="container my-5 text-center">
  <h2 class="mb-4">Your Health Stats</h2>
  <p class="text-muted fs-5">Login to view your BMI and daily calorie progress.</p>
  <a href="/login" class="btn">Login</a>
</section>
<% } %>

<section class="container my-5">
  <h2 class="text-center mb-4">Features</h2>
  <div class="row g-4">
    <div class="col-md-4">
      <a href="/logmeal" class="card text-center p-4 text-decoration-none h-100">
        <h3 class="h5">Count Macros</h3>
        <p class="text-muted small">Easily track your carbs, protein and fats daily.</p>
      </a>
    </div>
    <div class="col-md-4">
      <a href="/dashboard" class="card text-center p-4 text-decoration-none h-100">
        <h3 class="h5">Analyze Intake</h3>
        <p class="text-muted small">Break down your meals and get instant stats.</p>
      </a>
    </div>
    <div class="col-md-4">
      <a href="/Change_goal" class="card text-center p-4 text-decoration-none h-100">
        <h3 class="h5">Customize Goals</h3>
        <p class="text-muted small">Set personal targets and monitor progress.</p>
      </a>
    </div>
  </div>
</section>

<%- include("partials/footer") %>
